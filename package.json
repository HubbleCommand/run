{
  "name": "run-runner",
  "displayName": "run",
  "description": "Utility to run executables from the Explorer",
  "version": "1.1.2",
  "icon": "logo.png",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/HubbleCommand/run"
  },
  "publisher": "hcommand",
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "run.open",
        "title": "Open External"
      },
      {
        "command": "run.run",
        "title": "Run in Terminal"
      }
    ],
    "menus": {
      "editor/title/context": [
        {
          "command": "run.open"
        },
        {
          "command": "run.run"
        }
      ],
      "explorer/context": [
        {
          "command": "run.open"
        },
        {
          "command": "run.run"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "run - command mapping",
      "properties": {
        "run.FiletypeMappings": {
          "type": "object",
          "default": {},
          "description": "Define filetype - command mappings for run, i.e. {'.sh'; 'sh $0'}",
          "additionalProperties": {
            "type": "string"
          }
        },
        "run.AutoWrapSpacedPaths": {
          "type": "boolean",
          "default": true,
          "description": "Automatically wrap file paths with spaces with quotes ''. Only disable if you have problems."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.15.30",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.8.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
